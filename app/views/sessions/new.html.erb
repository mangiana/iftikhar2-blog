<div class="container">
  <div class="card mt-4">
    <div class="card-header text-center fw-bolder">
    </div>
    <div class="card-body">
      <%= form_with(scope: :sessions, url: login_path, local: true ) do |f|%>
      <%# <form> %>
        <div class="mb-3">
          <%= f.label :email, class:"form-label"%><br>
          <%# <label for="exampleInputPassword1" class="form-label">Description of Article</label> %>
          <%= f.email_field :email, class:"form-control"%>
          <%# <input type="password" class="form-control" id="exampleInputPassword1"> %>
        </div>
        <div class="mb-3">
          <%= f.label :password, class:"form-label"%><br>
          <%# <label for="exampleInputPassword1" class="form-label">Description of Article</label> %>
          <%= f.password_field :password, class:"form-control"%>
          <%# <input type="password" class="form-control" id="exampleInputPassword1"> %>
        </div>
        
        <div class="text-center">
          <%= f.submit "Log IN", class:"btn btn-secondary text-center"%>
          <%# <button type="submit" class="btn btn-primary text-center">Submit</button> %>
        </div>
      <%# </form> %>
      <%end%>
      <br>
      <div class="text-center">
        <%= link_to "Cancel",articles_path, class:"btn btn-secondary text-center", id:"cancel-button"%>
      </div>
    </div>
  </div>
</div>
